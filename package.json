{
  "name": "macro-studio-demo",
  "version": "1.0.0",
  "description": "Electron + Vue Studio Demo Application with Modern UI",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:vue\"",
    "dev:electron": "electron .",
    "dev:vue": "vite",
    "build": "vite build && electron-builder",
    "build:vue": "vite build"
  },
  "keywords": ["electron", "vue", "studio", "demo"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.3.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "element-plus": "^2.4.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "@element-plus/icons-vue": "^2.1.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  },
  "build": {
    "appId": "com.macrostudio.demo",
    "productName": "Macro Studio Demo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}